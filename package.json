{
  "name": "saucedemo-playwright",
  "version": "1.0.0",
  "description": "Automated software testing with playwright",
  "main": "index.js",
  "scripts": {
    "test:chrome": "playwright test --config=playwright.config.ts --project=Chromium --reporter=html",
    "test:firefox": "playwright test --config=playwright.config.ts --project=Firefox --reporter=html",
    "test:webkit": "playwright test --config=playwright.config.ts --project=Webkit --reporter=html",
    "test:visual:chrome": "playwright test --config=visual.config.ts --project=Chromium",
    "test:visual:firefox": "playwright test --config=visual.config.ts --project=Firefox",
    "test:visual:webkit": "playwright test --config=visual.config.ts --project=Webkit",
    "test:visual:chrome:update": "playwright test --config=visual.config.ts --project=Chromium --update-snapshots",
    "test:visual:firefox:update": "playwright test --config=visual.config.ts --project=Firefox --update-snapshots",
    "test:visual:webkit:update": "playwright test --config=visual.config.ts --project=Webkit --update-snapshots"
  },
  "author": "JDD",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.49.1",
    "prettier": "^3.4.2"
  },
  "directories": {
    "test": "tests"
  }
}
